<question-template   class="fg-short-answer {{ themeClass }}"   config="{{ config }}"   errorHint="{{ errorHint }}"   showErrorHint="{{ showErrorHint }}"   sequence="{{ sequence }}" >   <!-- 后代选择器对 slot 不生效  -->   <view class="{{ themeClass }}" style="width: 100%;">     <view class="textarea-wrapper {{ showErrorHint? 'error-wrapper':'' }}">       <input         tt:if="{{ !isInLynxRuntime }}"         class="textarea mini-textarea"         type="text"         bindinput="onInput"         bindfocus="onFocus"         bindblur="onBlur"         cursor-spacing="{{ 12 }}"         smart-scroll="{{ false }}"         auto-fit="{{ false }}"         adjust-position="{{ true }}"         placeholder="{{ config.placeholder || labels.please_enter }}"         placeholder-style="{{ placeholderStyle }}"       />       <view         tt:else         class="{{ themeClass }}"         style="width: 100%;"       >         <textarea           class="textarea lynx-textarea"           bindinput="onInput"           bindfocus="onFocus"           bindblur="onBlur"           placeholder="{{ config.placeholder || labels.please_enter }}"           smart-scroll="{{ false }}"           auto-fit="{{ false }}"           adjust-position="{{ false }}"           value="{{ initValue }}"           type="text"           caret-color="rgba(254, 44, 85, 1)"           style="text-align: start; height: {{ initInputHeigh }}px;"           min-height="{{ initInputHeight }}px"           max-height="{{ maxInputHeight }}px"           maxlines="{{ 100 }}"           maxlength="900"         ></textarea>       </view>     </view>   </view> </question-template>
