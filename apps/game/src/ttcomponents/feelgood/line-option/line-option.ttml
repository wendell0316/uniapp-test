<view   class="{{ themeClass }}"   style="width: 100%; flex-direction: column;" >   <view class="fg-line-option {{ selected? 'selected-option': 'normal-option' }}">     <selectbox       boxStyle="{{ boxStyle }}"       class="selectbox"       selected="{{ selected }}"       disabled="{{ disabled }}"       bindtap="onTap"     ></selectbox>     <view class="spacer"></view>     <view class="fg-line-option__text-container">       <text         bindtap="onTap"         class="fg-line-option__text {{ selected? 'selected-text': 'normal-text' }} {{ disabled? 'disabled-text': '' }}"       >         {{ config.content }}       </text>       <short-answer         tt:if="{{ config.need_extra && selected && useIndentExtra }}"         class="extra"         config="{{ extraShortAnswerConfig }}"         bindValueChange="onExtraChange"       ></short-answer>     </view>   </view>   <short-answer     tt:if="{{ !useIndentExtra && config.need_extra && selected }}"     class="extra"     config="{{ extraShortAnswerConfig }}"     bindValueChange="onExtraChange"   ></short-answer> </view>
